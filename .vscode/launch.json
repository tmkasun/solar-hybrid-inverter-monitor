    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "type": "python",
            "request": "attach",
            "connect": {
              "host": "192.168.1.158", // replace this with remote machine name
              "port": 5678
            },
            "pathMappings": [
                {
                  "localRoot": "${file}", // Maps C:\Users\user1\project1
                  "remoteRoot": "/root/projects/ru.py" // To current working directory ~/project1
                }
              ]
          },
          { // https://code.visualstudio.com/docs/python/debugging#_flask-debugging
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/inverter-api/app.py"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
    ]
}