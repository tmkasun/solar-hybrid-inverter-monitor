    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "type": "python",
            "request": "attach",
            "connect": {
              "host": "192.168.1.158", // replace this with remote machine name
              "port": 5678
            },
            "pathMappings": [
                {
                  "localRoot": "${file}", // Maps C:\Users\user1\project1
                  "remoteRoot": "/root/projects/ru.py" // To current working directory ~/project1
                }
              ]
          }
    ]
}